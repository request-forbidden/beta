<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="auth.models.Group" table="groups">

		<id name="id" type="long" column="id">
			<generator class="identity" />
		</id>

		<property name="name">
			<column name="name"/>
		</property>

		<property name="descr">
			<column name="descr"/>
		</property>

        <property name="addToCalendar">
            <column name="add_to_calendar"/>
        </property>

	</class>
</hibernate-mapping>