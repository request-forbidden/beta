<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="auth.models.Location" table="locations">

        <id name="id" type="int" column="id">
            <generator class="identity" />
        </id>

        <property name="city">
            <column name="city"/>
        </property>

        <set name="users" table="user_location" inverse="true" lazy="true">
            <key column="location_id" not-null="true"/>
            <many-to-many column="user_id" class="auth.models.User"/>
        </set>

    </class>
</hibernate-mapping>