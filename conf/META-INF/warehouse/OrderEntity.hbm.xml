<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="warehouse.models.OrderEntity" table="wh_orders_entities" schema="warehouse">
		<id name="id" type="long" column="order_entity_id">
			<generator class="identity" />
		</id>
		
		<property name="type">
			<column name="type"/>
		</property>

        <property name="quantity">
            <column name="quantity"/>
        </property>

        <property name="entityTypeId">
            <column name="entity_type_id"/>
        </property>

        <property name="entityId">
            <column name="entity_id"/>
        </property>

        <property name="orderId">
            <column name="order_id"/>
        </property>

        <many-to-one name="entityType" class="warehouse.models.EntityType" update="false" insert="false">
            <column name="entity_type_id"></column>
        </many-to-one>

        <many-to-one name="entity" class="warehouse.models.eav.EAV_Entity" update="false" insert="false">
            <column name="entity_id"></column>
        </many-to-one>

        <many-to-one name="order" class="warehouse.models.Order" update="false" insert="false">
            <column name="order_id"></column>
        </many-to-one>
	</class>
</hibernate-mapping>