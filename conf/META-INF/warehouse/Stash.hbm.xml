<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="warehouse.models.StashItem" table="wh_stash" schema="warehouse">
		<id name="id" type="long" column="stash_id">
			<generator class="identity" />
		</id>

        <property name="stockId">
            <column name="stock_id"/>
        </property>

        <property name="entityId">
            <column name="entity_id"/>
        </property>

        <property name="entityTypeId">
            <column name="entity_type_id"/>
        </property>

        <property name="userId">
            <column name="user_id"/>
        </property>
		
		<property name="quantity">
			<column name="quantity"/>
		</property>

        <many-to-one name="stock" class="warehouse.models.Stock" update="false" insert="false">
            <column name="stock_id"></column>
        </many-to-one>

        <many-to-one name="entity" class="warehouse.models.eav.EAV_Entity" update="false" insert="false">
            <column name="entity_id"></column>
        </many-to-one>

        <many-to-one name="entityType" class="warehouse.models.EntityType" update="false" insert="false">
            <column name="entity_type_id"></column>
        </many-to-one>
	</class>
</hibernate-mapping>