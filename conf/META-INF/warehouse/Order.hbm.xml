<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="warehouse.models.Order" table="wh_orders" schema="warehouse">
		<id name="id" type="long" column="order_id">
			<generator class="identity" />
		</id>
		
		<property name="ident">
			<column name="ident"/>
		</property>

        <property name="client">
            <column name="client"/>
        </property>

        <property name="type">
            <column name="order_type"/>
        </property>

        <property name="retrieveToStockId">
            <column name="retrieve_to_stock"/>
        </property>

        <property name="fromStockId">
            <column name="from_stock"/>
        </property>

        <property name="orderDescription">
            <column name="description"/>
        </property>

        <property name="workDescription">
            <column name="work_description"/>
        </property>

        <property name="address">
            <column name="address"/>
        </property>

        <property name="retrievedItems">
            <column name="retrieved_items"/>
        </property>

        <property name="userId">
            <column name="user_id"/>
        </property>

        <property name="orderDate" type="org.jadira.usertype.dateandtime.joda.PersistentDateTime">
            <column name="order_date"/>
        </property>

        <property name="createDate" type="org.jadira.usertype.dateandtime.joda.PersistentDateTime">
            <column name="create_date"/>
        </property>

        <property name="modifyDate" type="org.jadira.usertype.dateandtime.joda.PersistentDateTime">
            <column name="modify_date"/>
        </property>

        <many-to-one name="user" class="auth.models.User" update="false" insert="false">
            <column name="user_id"></column>
        </many-to-one>

        <set name="orderEntities" inverse="true" schema="warehouse">
            <key column="order_id" not-null="true"/>
            <one-to-many class="warehouse.models.OrderEntity" />
        </set>

        <set name="documents" table="wh_orders_documents" inverse="true" schema="warehouse">
            <key column="order_id" not-null="true"/>
            <many-to-many column="document_id" class="warehouse.models.Document"/>
        </set>
	</class>
</hibernate-mapping>