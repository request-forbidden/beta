<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="warehouse.models.Request" table="wh_requests" schema="warehouse">
		<id name="id" type="long" column="request_id">
			<generator class="identity" />
		</id>

        <property name="stockId" column="stock_id"></property>

        <many-to-one name="stock" class="warehouse.models.Stock" update="false" insert="false">
            <column name="stock_id"></column>
        </many-to-one>

        <property name="requestDate" type="org.jadira.usertype.dateandtime.joda.PersistentDateTime" column="request_date"></property>

        <property name="requestStatus" column="request_status"></property>

        <property name="additionalInfo" column="additional_info"></property>

        <property name="requestTypeId" column="request_type_id"></property>

        <set name="requestEntityTypes" inverse="true" schema="warehouse">
            <key column="request_id" not-null="true"/>
            <one-to-many class="warehouse.models.RequestEntityType" />
        </set>

        <set name="requestComments" inverse="true" schema="warehouse">
            <key column="request_id" not-null="true"/>
            <one-to-many class="warehouse.models.RequestComment" />
        </set>

        <many-to-one name="requestType" class="warehouse.models.RequestType" update="false" insert="false">
            <column name="request_type_id"></column>
        </many-to-one>

	</class>
</hibernate-mapping>